TASK: 1

.model small

.stack 100h

.data

.code

main proc

mov dl,'1'

mov cx,5

mov ah,2

label1:

int 21h

add dl,2

loop label1

mov dx,10

mov ah,2

int 21h

mov dx,13

int 21h

mov ah,4ch

int 21h

main endp

end main





