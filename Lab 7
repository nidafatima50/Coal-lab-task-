TASK: 1

. model small

. stack 100h

.data

.code

main proc

mov ah,1h

int 21h

sub al,30h

mov bl,al

mul bl

add al,30h

mov dl,al

mov ah,2h

int 21h

main endp

end main



    TASK: 2

.model small

.data

.code

main proc  

  mov ah,1

  int 21h

  sub al,48

  mov bl,al 

  mul bl

  mul bl       

  AAM 

  mov ch,ah

  mov cl,al

  mov dl,ch

  add dx,48  

  mov ah,2

  int 21h 

  mov dl,cl

  add dx,48 

  mov ah,2

  int 21h   

  mov ah,4ch

  int 21h   

main endp

end main







